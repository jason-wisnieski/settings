#!/bin/bash
# Usage: cppclass <classname>

CLASSNAME=$1

echo "Creating C++ class '$CLASSNAME'..."

cat <<EOF > $CLASSNAME.h
#pragma once

class $CLASSNAME
{
public:
	$CLASSNAME();
	virtual ~$CLASSNAME();
};
EOF

cat <<EOF > $CLASSNAME.cpp
#include "$CLASSNAME.h"

$CLASSNAME::$CLASSNAME()
{
}

$CLASSNAME::~$CLASSNAME()
{
}
EOF
