#!/bin/bash
# Usage: cppclass <classname>

CLASSNAME=$1
FILEID=$(echo $CLASSNAME | tr "[:lower:]" "[:upper:]")_H_$RANDOM$RANDOM$RANDOM

echo "Creating C++ class '$CLASSNAME'..."

cat <<EOF > $CLASSNAME.h
#ifndef $FILEID
#define $FILEID

class $CLASSNAME
{
public:
	$CLASSNAME();
	virtual ~$CLASSNAME();
};

#endif // $FILEID
EOF

cat <<EOF > $CLASSNAME.cpp
#include "$CLASSNAME.h"

$CLASSNAME::$CLASSNAME()
{
}

$CLASSNAME::~$CLASSNAME()
{
}
EOF
